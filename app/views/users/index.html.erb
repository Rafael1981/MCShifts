<h3>Users</h3>

<div class="table-responsive">
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th class="col-md-1">
          <div align="center">First Name</div>
        </th>
        <th class="col-md-1">
          <div align="center">Middle Name</div>
        </th>
        <th class="col-md-1">
          <div align="center">Last Name</div>
        </th>
        <th class="col-md-1">
          <div align="center">Email</div>
        </th>
        <th class="col-md-2">
          <div align="center">Actions </div>
        </th>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <% if current_user.admin? %>
            <td class="col-md-1"><%= user.firstname%></td>
            <td class="col-md-1"><%= user.middlename %></td>
            <td class="col-md-1"><%= user.lastname%></td>
            <td class="col-md-1"><%= user.email %></td>
            <td class="col-md-2"><%= link_to 'Edit', edit_user_path(user), class: "btn btn-link mclink" %> <%= link_to 'New Password', password_path(user), class: "btn btn-link mclink" %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to 'New User', signup_path, class: "btn btn-link mclink" %>
