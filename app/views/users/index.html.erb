<h1>Listing logs</h1>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Middle Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.firstname%></td>
        <td><%= user.middlename %></td>
        <td><%= user.lastname%></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user, class: "btn btn-link mclink" %></td>
        <td><%= link_to 'Edit', edit_log_path(user), class: "btn btn-link mclink" %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', signup_path, class: "btn btn-link mclink" %>
