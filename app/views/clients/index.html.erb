<h3>Clients</h3>

<% if @clients.present? %>
<div class="table-responsive">
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th class="col-md-1">
          <div align="center">Name</div>
        </th>
        <th class="col-md-1">
          <div align="center">Actions</div>
        </th>
    </thead>
    <tbody>
      <% @clients.each do |client| %>
        <tr>
          <% if current_user.admin? %>
            <td class="col-md-1"><%= client.name %></td>
            <td class="col-md-1"><%= link_to 'Edit', edit_client_path(client), class: "btn btn-link mclink" %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<% end %>
<%= link_to 'New Client', new_client_path, class: "btn btn-link mclink" %>
